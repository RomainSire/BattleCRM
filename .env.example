# ===========================================
# BattleCRM Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -------------------------------------------
# Application Settings
# -------------------------------------------
APP_NAME=BattleCRM

# -------------------------------------------
# Frontend (Vite)
# -------------------------------------------
# API URL for frontend to call backend
VITE_API_URL=http://localhost:3333/api
# Frontend application URL
VITE_APP_URL=http://localhost:5173

# -------------------------------------------
# Backend (Adonis.js)
# -------------------------------------------
NODE_ENV=development
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
APP_KEY=
PORT=3333
HOST=0.0.0.0

# -------------------------------------------
# Database (Supabase PostgreSQL)
# -------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=battlecrm
# Set to true for Supabase (remote), false for local PostgreSQL
DB_SSL=false

# -------------------------------------------
# Session (Adonis.js)
# -------------------------------------------
SESSION_DRIVER=cookie

# -------------------------------------------
# CORS
# -------------------------------------------
# Frontend origin for CORS (must match VITE_APP_URL)
CORS_ORIGIN=http://localhost:5173

# -------------------------------------------
# Feature Flags
# -------------------------------------------
# Set to false to disable new user registration
ALLOW_REGISTRATION=true

# -------------------------------------------
# Logging
# -------------------------------------------
# Options: fatal, error, warn, info, debug, trace, silent
LOG_LEVEL=debug