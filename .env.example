# ===========================================
# BattleCRM Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -------------------------------------------
# Application Settings
# -------------------------------------------
APP_NAME=BattleCRM
APP_ENV=development
APP_DEBUG=true

# -------------------------------------------
# Frontend (Vite)
# -------------------------------------------
# API URL for frontend to call backend
VITE_API_URL=http://localhost:3333/api
# Frontend application URL
VITE_APP_URL=http://localhost:5173

# -------------------------------------------
# Backend (Adonis.js)
# -------------------------------------------
NODE_ENV=development
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
APP_KEY=generate_32_char_random_key_here
PORT=3333
HOST=0.0.0.0

# -------------------------------------------
# Database (Supabase PostgreSQL)
# -------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=battlecrm
# Full connection string (alternative to individual fields)
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/battlecrm

# -------------------------------------------
# Supabase (Auth + RLS)
# -------------------------------------------
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# -------------------------------------------
# Session (Adonis.js)
# -------------------------------------------
SESSION_DRIVER=cookie
SESSION_COOKIE_NAME=battlecrm_session
# Set to true in production with HTTPS
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# -------------------------------------------
# CORS
# -------------------------------------------
# Frontend origin for CORS (must match VITE_APP_URL)
CORS_ORIGIN=http://localhost:5173

# -------------------------------------------
# Feature Flags
# -------------------------------------------
# Set to false to disable new user registration
ALLOW_REGISTRATION=true

# -------------------------------------------
# Logging
# -------------------------------------------
# Options: debug, info, warn, error
LOG_LEVEL=debug
