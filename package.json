{
  "name": "battlecrm",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "BattleCRM - Personal CRM for job hunting with A/B testing capabilities",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/RomainSire/BattleCRM.git"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "biome check .",
    "format": "biome check --write .",
    "lint:fix": "biome check --write --unsafe .",
    "test": "pnpm -r test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "pnpm -r type-check"
  },
  "engines": {
    "node": ">=20.6.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.0.0"
  }
}
